<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="24dp">


    <ScrollView
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="4dp">

        <TextView
            android:id="@+id/messages_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="true"
            android:gravity="start|top"
            android:importantForAutofill="no"
            tools:ignore="LabelFor" />
    </ScrollView>


    <TableLayout
        android:id="@+id/table"
        android:layout_width="240dp"
        android:layout_height="300dp"
        android:scrollbars="none"
        android:stretchColumns="*"
        tools:context=".MainActivity"/>


    <WebView
        android:id="@+id/webView"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

    </WebView>

    <ImageView
        android:id="@+id/d_pad"
        android:layout_width="298dp"
        android:layout_height="294dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="1dp"

        android:visibility="visible"
        app:srcCompat="@mipmap/ic_launcher_foreground"
        tools:ignore="ContentDescription" />
    <Button
        android:id="@+id/up_button"
        android:layout_width="73dp"
        android:layout_height="87dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="70dp"
        android:layout_marginVertical="170dp"
        android:layout_marginStart="160dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="90dp"
        android:background="@android:color/transparent"
        android:onClick="sendUp"
        android:text="" />

    <Button
        android:id="@+id/right_button"
        android:layout_width="73dp"
        android:layout_height="87dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="70dp"
        android:layout_marginVertical="120dp"
        android:layout_marginStart="210dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="90dp"
        android:background="@android:color/transparent"
        android:onClick="sendRight"
        android:text="" />

    <Button
        android:id="@+id/left_button"
        android:layout_width="68dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginVertical="120dp"
        android:layout_marginHorizontal="70dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="240dp"
        android:layout_marginBottom="90dp"
        android:background="@android:color/transparent"
        android:onClick="sendLeft"
        android:text="" />

    <Button
        android:id="@+id/down_button"
        android:layout_width="68dp"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginVertical="65dp"
        android:layout_marginHorizontal="70dp"
        android:layout_marginStart="165dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="72dp"
        android:background="@android:color/transparent"
        android:onClick="sendDown"
        android:text="" />

    <Button
        android:layout_width="133dp"
        android:layout_height="76dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:text="@string/grab" />

    <Button
        android:layout_width="133dp"
        android:layout_height="76dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="175dp"
        android:layout_marginBottom="1dp"
        android:text="@string/release" />


</RelativeLayout>
